<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".di.MyApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.ListaDeComprasApp"
        tools:targetApi="31">
        <activity
            android:name=".shoppinglist.ui.EditItemActivity"
            android:exported="false"
            android:theme="@style/Theme.ListaDeComprasApp" />
        <activity
            android:name=".shoppinglist.ui.EditListActivity"
            android:exported="false"
            android:theme="@style/Theme.ListaDeComprasApp" />
        <activity
            android:name=".shoppinglist.ui.ListActivity"
            android:exported="false" />
        <activity
            android:name=".shoppinglist.ui.ListsHomeActivity"
            android:exported="false"
            android:theme="@style/Theme.ListaDeComprasApp" />
        <activity
            android:name=".account.ui.CreateUserActivity"
            android:exported="false"
            android:theme="@style/Theme.ListaDeComprasApp" />
        <activity
            android:name=".account.ui.LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/title_activity_main"
            android:resizeableActivity="true"
            android:theme="@style/Theme.ListaDeComprasApp.NoActionBar"
            tools:targetApi="24">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>